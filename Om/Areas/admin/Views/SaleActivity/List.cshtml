@{
    ViewBag.Title = "活动列表";
}
@using BLL;
@{ T_ActivityAreaBll T_ActivityAreaBll = new T_ActivityAreaBll();
    T_AgencyBll T_AgencyBll = new T_AgencyBll();
    T_SaleActivityTypeBll T_SaleActivityTypeBll = new T_SaleActivityTypeBll();
}
<style>
            .checkbox {
            height:30px;
            font-size:inherit
        }
</style>
<nav class="breadcrumb"></nav>
<div class="Hui-article">
    <article class="cl pd-20">
        <div class="text-c">
            经销商名称
            @Html.DropDownList("agencyid", T_AgencyBll.SelectListItem(), new { @class = "checkbox" })&nbsp;
            区域名称
            @Html.DropDownList("activitareaid", T_ActivityAreaBll.SelectListItem(), new { @class = "checkbox" })&nbsp;
            活动类型
            @Html.DropDownList("saleactivitytypeid", T_SaleActivityTypeBll.SelectListItem(), new { @class = "checkbox" })&nbsp;
            活动日期范围：
            <input type="text" onfocus="WdatePicker({maxDate:'#F{$dp.$D(\'datemax\')||\'%y-%M-%d\'}'})" id="datemin" value="" class="input-text Wdate" style="width:120px;">
            -
            <input type="text" onfocus="WdatePicker({minDate:'#F{$dp.$D(\'datemin\')}',maxDate:'%y-%M-%d'})" id="datemax" class="input-text Wdate" style="width:120px;" value="">
            <button type="button" class="btn btn-success radius"  onclick="search()"><i class="Hui-iconfont">&#xe665;</i> 查询</button>
        </div>
        <div class="cl pd-5 bg-1 bk-gray mt-20">
            <span class="l" id="operate"></span>
            <span class="r">共有数据：<strong id="total"></strong> 条</span>
        </div>
        <table class="table table-border table-bordered table-bg">
            <thead>
                <tr>
                    <th scope="col" colspan="13">活动列表</th>
                </tr>
                <tr class="text-c">
                    <th width="25"><input type="checkbox" name="" value=""></th>
                    <th>经销商名称</th>
                    <th >区域</th>
                    <th >日期</th>
                    <th >活动类别</th>
                    <th >活动客流量</th>
                    <th >活动潜客量</th>
                    <th >活动车主量</th>
                    <th >活动现场订单量</th>
                    <th >活动成本金额</th>
                    <th >活动后续订单量</th>
                    <th >宣传类型</th>
                    </tr>
            </thead>
            <tbody id="view1"></tbody>
        </table>


        <div style="margin:0;text-align:center;margin-top:15px" id="page1"></div>
    </article>
</div>


@section  scripts
{
    <script type="text/javascript" src="/lib/My97DatePicker/4.8/WdatePicker.js"></script>
    <script type="text/javascript" src="/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/lib/laypage/1.2/laypage.js"></script>
    <script type="text/javascript" src="~/lib/date.js"></script>
    <script src="~/lib/operate.js"></script>
    <script type="text/javascript">
    $(function ()
    {
        operateButton();
       demo(1);
    }
    )

    function btn_add() {
        admin_add('添加', '/admin/SaleActivity/Add', '1000', '700')
    }

    function btn_edit() {
        if ($("#view1").find(":checkbox:checked").length == 1) {
            var UseridId = $("#view1").find(":checkbox:checked").val();
            admin_add('修改', '/admin/SaleActivity/Add?SaleActivityId=' + UseridId, '800', '500')
        }
        else {
            $.Huimodalalert('请选择一个需要修改的数据', 1000)
        }

    }

    function btn_print()
    {
     
        var url = "/api/ApiSaleActivity/Print?activitareaid=" + $("#activitareaid").val() + "&agencyid=" + $("#agencyid").val() + "&saleactivitytypeid=" + $("#saleactivitytypeid").val() + "&begindate=" + $("#datemin").val() + "&enddate=" + $("#datemax").val();
        $('<form method="post" action="' + url + '"></form>').appendTo('body').submit().remove();
    }
    function search()
    {
        demo(1);
    }
    function demo(page) {
        $.post('/api/ApiSaleActivity/GetActivityList',
           { "page": page, "rows": 20, "sord": "desc", "sidx": "SaleActivityId", activitareaid: $("#activitareaid").val(), agencyid: $("#agencyid").val(), saleactivitytypeid: $("#saleactivitytypeid").val(), begindate: $("#datemin").val(), enddate: $("#datemax").val() } //向服务端传的参数，此处只是演示
        , function (res) {
            $("#total").html(res.records);
            var strhtml="";
            //此处仅仅是为了演示变化的内容
            for (var i = 0; i < res.rows.length; i++) {
                strhtml+="<tr class=\"text-c\">";
                strhtml += "<td><input type=\"checkbox\" value=\"" + res.rows[i].saleactivityid + "\" name=\"\"></td>";
                strhtml += "<td>" + res.rows[i].agencyname + "</td>";
                strhtml += "<td>" + res.rows[i].activityareaname + "</td>";
                strhtml += "<td>" + res.rows[i].activitydate.substring(0, 10) + "</td>";
                strhtml += "<td>" + res.rows[i].saleactivitytypename + "</td>";
                strhtml += "<td>" + res.rows[i].passengerflow + "</td>";
                strhtml += "<td>" + res.rows[i].latentpassengerflow + "</td>";
                strhtml += "<td>" + res.rows[i].carowner + "</td>";
                strhtml += "<td>" + res.rows[i].orderquantity + "</td>";
                strhtml += "<td>" + res.rows[i].primecost + "</td>";
                strhtml += "<td>" + res.rows[i].laterorderquantity + "</td>";
                strhtml += "<td >" + res.rows[i].publishwaycontent + "</td>";
                strhtml+="</tr>"

            }
            document.getElementById('view1').innerHTML = strhtml;
            $("#view1").children().mouseover(function () {
                $(this).css("background-color", "#f5fafe");
                $(this).siblings().css("background-color", "");
            }
          );
            $("#view1").children().click(function () {
                if ($(this).children().find(":checkbox").prop("checked")) {
                    $(this).children().find(":checkbox").prop("checked", false);
                }
                else {
                    $(this).children().find(":checkbox").prop("checked", true);
                }

            }
        );

            laypage({
                cont: 'page1', //容器。值支持id名、原生dom对象，jquery对象。【如该容器为】：<div id="page1"></div>
                pages: res.total, //通过后台拿到的总页数
                curr: res.page, //当前页
                skip: true,
                groups: 10,//连续分页数
                jump: function (obj, first) { //触发分页后的回调
                    if (!first) { //点击跳页触发函数自身，并传递当前页：obj.curr
                        demo(obj.curr);
                    }
                }
            });
        },"json");
    };
    function admin_add(title, url, w, h) {
        layer_show(title, url, w, h);
    }
    function btn_del() {
        if ($("#view1").find(":checkbox:checked").length > 0) {
            if (confirm("你确定删除吗")) {
                loading1();
                var roleid = "";
                $("#view1").find(":checkbox:checked").each(function (index) {
                    if (roleid == "") {
                        roleid = $(this).val();
                    }
                    else {
                        roleid += "," + $(this).val();
                    }

                }
                );

                $.post("/api/ApiSaleActivity/Del", { "idlist": roleid }, function (data) {
                    removeLoading('test');
                    // alert("删除成功");
                    location.href = location.href

                }, "json"
                )

            }

        }
        else {
            $.Huimodalalert('请勾选要删除的数据', 1000)
        }
    }
  

    </script>

}

