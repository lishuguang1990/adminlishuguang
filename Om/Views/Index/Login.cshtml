@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <title>林肯中国顾客体验活动数据统计系统</title>
    @Styles.Render("~/assets/css/common")
</head>
<body>
    <section class="login-cont">
        <div class="login-box">
            <div class="login-title">
                <img src="~/static/main/images/logo.png" class="login-logo" />
                <em>林肯中国顾客体验活动数据统计系统</em>
                <p>THE DATA STATISTICS SYSTEM OF  THE LINCOLN CUSTOMER EXPERIENCE</p>
            </div>
            <div class="login-input">
                <em>用户登录 &nbsp;&nbsp;LOGIN</em>
                @using (Html.BeginForm())
                {
                    @Html.TextBox("username", "", new { placeholder = "用户名", @class = "username" })
                    @Html.Password("password", "", new { placeholder = "密码", @class = "password" })
                    <a href="javascript:;" class="submit-btn">登陆</a>
                }
            </div>
        </div>
    </section>
    @Scripts.Render("~/assets/js/common")
</body>
</html>